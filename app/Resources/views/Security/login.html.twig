{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock%}


{% block body %}

    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">
            <div class="well">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <div class="body bg-gray">
{#                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
#}                    <div class="form-group">
                        <label class="sr-only" for="username">Username</label>
                        <input type="text" class="form-control" id="username" name="_username" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn bg-light-blue btn-block">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
                
{% endblock%}